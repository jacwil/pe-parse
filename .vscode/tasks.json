{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "mkdir ${workspaceFolder}/build ; cd ${workspaceFolder}/build ; cmake -DCMAKE_BUILD_TYPE=Release .. && cmake --build . --config Release",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
            }
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/getpe.sh",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
            }
        }
    ]
}