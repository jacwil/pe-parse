{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "mkdir ${workspaceFolder}/build ; cd ${workspaceFolder}/build ; cmake -DCMAKE_BUILD_TYPE=Release .. && cmake --build . --config Release",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Install library: pe-parser",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && sudo cmake --build . --config Release --target install",
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/getpe.sh",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build example: peaddrconv",
            "type": "shell",
            "command": "[ -d ${workspaceFolder}/examples/peaddrconv/build ] || mkdir ${workspaceFolder}/examples/peaddrconv/build ; cd ${workspaceFolder}/examples/peaddrconv/build ; cmake -DCMAKE_BUILD_TYPE=Release .. && cmake --build . --config Release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build and install python bindings",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "command": "python setup.py build && sudo python setup.py install",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build and install python3 bindings",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "command": "python3 setup.py build && sudo python3 setup.py install",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}