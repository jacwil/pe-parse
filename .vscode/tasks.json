{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "mkdir ${workspaceFolder}/build ; cd ${workspaceFolder}/build ; cmake -DCMAKE_BUILD_TYPE=Release .. ; cmake --build . --config Release",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "mkdir ${workspaceFolder}/build ; cd ${workspaceFolder}/build ; cmake -DCMAKE_BUILD_TYPE=Debug .. ; cmake --build . --config Debug",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false
            }
        },
        {
            "label": "Install library: pe-parser",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "linux": {
                "command": "sudo cmake --build . --config Release --target install"
            },
            "windows": {
                "command": "cmake --build . --config Release --target install"                
            },
            "problemMatcher": [],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run tests",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/scripts/getpe.sh",
            },
            "windows": {
                "command": ""
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build example: peaddrconv",
            "type": "shell",
            "command": "mkdir ${workspaceFolder}/examples/peaddrconv/build ; cd ${workspaceFolder}/examples/peaddrconv/build ; cmake -DCMAKE_BUILD_TYPE=Release .. ; cmake --build . --config Release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build and install python bindings",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "linux": {
                "command": "python setup.py build ; sudo python setup.py install"
            },
            "windows": {
                "command": "python setup.py build ; python setup.py install"                
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build and install python3 bindings",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/python"
            },
            "linux": {
                "command": "python3 setup.py build ; sudo python3 setup.py install"
            },
            "windows": {
                "command": "python setup.py build ; python setup.py install"                
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}